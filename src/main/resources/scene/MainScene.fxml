<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="700.0" stylesheets="@../css/MainScene.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep13.lume.controller.MainController">
    <children>
        <VBox alignment="CENTER" layoutY="43.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </VBox.margin>
                    <children>
                        <TextField fx:id="txtAddress" alignment="CENTER" onAction="#txtAddressOnAction" prefHeight="26.0" prefWidth="520.0" promptText="Enter URL">
                            <font>
                                <Font name="Poppins Regular" size="12.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>

                <WebView fx:id="wbDisplay" prefHeight="1080.0" prefWidth="1920.0" />

                <HBox fx:id="hBoxFooter" alignment="CENTER_RIGHT" prefWidth="700.0" spacing="10" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="15.0">
                    <children>
                        <Label fx:id="lblLicense" text="CopyRight DEP-13 IJSE. All Right Reserved">
                            <font>
                                <Font size="12.0" />
                            </font></Label>
                        <Button fx:id="btnAbout" mnemonicParsing="false" onAction="#btnAboutOnAction" prefHeight="22.0" prefWidth="55.0" text="About">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" right="20.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
